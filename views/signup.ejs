<!DOCTYPE html>
<html lang="en" data-theme="winter">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="/css/style.css"> 
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.31.0/dist/full.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <header>
    <div class="navbar">
      <div class="flex-1">
        <img class="w-24 rounded-full ml-32" src="/images/logo.png" alt="logo">
      </div>
      <div class="flex-none">
        <ul class="menu menu-horizontal p-0">
          <li class="pr-4"><a class="border-solid border-2 border-sky-700" href="/">Home</a></li>
          <li><a class="mr-32 border-solid border-2 border-sky-700" href="/login">Log In</a></li>
        </ul>
      </div>
    </div>
  </header>
      <div class="text-center mt-32">
        <h1 class="text-5xl font-bold">Sign Up</h1>
      </div>
            <section class="w-96 mx-auto my-8 flex flex-col">
              <div>
                <% if (locals.messages.errors) { %>
                  <% messages.errors.forEach( el => { %>
                      <div class="alert alert-danger"><%= el.msg %></div>
                  <% }) %>    
              <% } %>
                <% if (locals.messages.info) { %>
                  <% messages.info.forEach( el => { %>
                      <div class="alert alert-info"><%= el.msg %></div>
                  <% }) %>    
              <% } %>
              </div>
                
                <form class="flex flex-col justify-center mx-auto my-0 w-96 p-8" action="/signup" method="POST">
                    <div class="mb-3 flex flex-col">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="input input-bordered input-primary w-full " id="userName" name="userName">
                      </div>
                    <div class="mb-3 flex flex-col">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="input input-bordered input-primary w-full " id="exampleInputEmail1" aria-describedby="emailHelp" name="email">                  
                    </div>
                    <div class="mb-3 flex flex-col">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="input input-bordered input-primary w-full " id="password" name="password">
                    </div>
                    <div class="mb-3 flex flex-col">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="input input-bordered input-primary w-full " id="confirmPassword" name="confirmPassword">
                      </div>
                    <button type="submit" class="btn btn-primary bg-blue-400 mt-8 text-slate-200">Submit</button>
                  </form>
            </section>
  </body>
</html>
